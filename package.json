{
  "name": "validator-fns",
  "version": "1.0.3",
  "description": "Small asynchronous validation library",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "keywords": [
    "validation",
    "validate",
    "simple",
    "function",
    "functional",
    "async",
    "promise",
    "typescript"
  ],
  "types": "dist/index.d.ts",
  "main": "dist/index.umd.js",
  "module": "dist/index.esm.js",
  "engines": {
    "node": ">=12",
    "npm": ">=6"
  },
  "scripts": {
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint --ext .ts src",
    "test": "jest",
    "build": "rollup -c && tsc --project tsconfig.types.json",
    "watch": "rollup -cw",
    "prepublishOnly": "npm run clean && npm run type-check && npm run lint && npm test && npm run build"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.10",
    "@babel/preset-typescript": "^7.12.7",
    "@rollup/plugin-typescript": "^8.0.0",
    "@tsconfig/recommended": "^1.0.1",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.12",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "babel-jest": "^26.6.3",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-jest": "^24.1.3",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.34.2",
    "rollup-plugin-bundle-size": "^1.0.3",
    "tslib": "^2.0.3",
    "typescript": "^4.1.2"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:smonn/validator-fns.git"
  },
  "homepage": "https://www.npmjs.com/package/validator-fns"
}
