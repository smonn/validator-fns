{
  "name": "validator-fns",
  "version": "1.0.3",
  "description": "Small asynchronous validation library",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "keywords": [
    "validation",
    "validate",
    "simple",
    "function",
    "functional",
    "async",
    "promise",
    "typescript"
  ],
  "typings": "dist/index.d.ts",
  "main": "dist/index.js",
  "module": "dist/validator-fns.esm.js",
  "engines": {
    "node": ">=12",
    "npm": ">=6"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/validator-fns.cjs.production.min.js",
      "limit": "2.5 KB"
    },
    {
      "path": "dist/validator-fns.esm.js",
      "limit": "2.5 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.9.1",
    "husky": "^4.3.5",
    "size-limit": "^4.9.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.0.3",
    "typescript": "^3.9.7"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:smonn/validator-fns.git"
  },
  "homepage": "https://www.npmjs.com/package/validator-fns"
}
