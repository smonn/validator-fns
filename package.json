{
	"name": "validator-fns",
	"version": "1.5.4",
	"description": "Small asynchronous validation library",
	"license": "MIT",
	"files": [
		"dist",
		"runkit.js"
	],
	"author": {
		"name": "Simon Ingeson",
		"url": "https://smonn.se"
	},
	"keywords": [
		"async",
		"browser",
		"browsers",
		"function",
		"functional",
		"functions",
		"isomorphic",
		"node",
		"promise",
		"ssr",
		"typescript",
		"universal",
		"validate",
		"validation",
		"validator"
	],
	"main": "dist/index.js",
	"exports": "./dist/index.js",
	"types": "dist/index.d.ts",
	"type": "module",
	"engines": {
		"node": ">=12",
		"npm": ">=6"
	},
	"scripts": {
		"clean": "rimraf dist",
		"check": "tsc --noEmit",
		"build": "tsc --project tsconfig.dist.json",
		"lint": "xo",
		"size": "size-limit",
		"analyze": "size-limit --why",
		"test": "ava",
		"coverage": "nyc npm test",
		"prepublishOnly": "run-s clean lint check test build"
	},
	"size-limit": [
		{
			"path": "dist/index.js",
			"limit": "2.5 KB"
		}
	],
	"devDependencies": {
		"@istanbuljs/nyc-config-typescript": "^1.0.1",
		"@size-limit/preset-small-lib": "4.11.0",
		"ava": "^3.15.0",
		"husky": "6.0.0",
		"lint-staged": "11.0.0",
		"npm-run-all": "4.1.5",
		"nyc": "^15.1.0",
		"rimraf": "3.0.2",
		"size-limit": "4.11.0",
		"ts-node": "10.0.0",
		"tslib": "2.2.0",
		"type-fest": "^1.1.3",
		"typescript": "4.2.4",
		"xo": "^0.40.1"
	},
	"repository": "github:smonn/validator-fns",
	"homepage": "https://npm.im/validator-fns",
	"runkitExampleFilename": "runkit.js",
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.ts": "xo --fix"
	},
	"xo": {
		"envs": [
			"browser",
			"node"
		],
		"ignores": [
			"runkit.js",
			"benchmark/"
		]
	},
	"ava": {
		"files": [
			"test/**/*"
		],
		"nonSemVerExperiments": {
			"configurableModuleFormat": true,
			"nextGenConfig": true
		},
		"extensions": {
			"ts": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	},
	"nyc": {
		"extends": "@istanbuljs/nyc-config-typescript",
		"all": true,
		"reporter": [
			"text",
			"html",
			"lcov"
		],
		"include": [
			"src/**/*.ts"
		],
		"exclude": [
			"src/index.ts"
		]
	}
}
