{
  "name": "validator-fns",
  "version": "1.10.0",
  "description": "Small asynchronous validation library",
  "license": "MIT",
  "files": [
    "dist",
    "runkit.js"
  ],
  "author": {
    "name": "Simon Ingeson",
    "url": "https://smonn.se"
  },
  "keywords": [
    "async",
    "browser",
    "browsers",
    "function",
    "functional",
    "functions",
    "isomorphic",
    "node",
    "promise",
    "ssr",
    "typescript",
    "universal",
    "validate",
    "validation",
    "validator"
  ],
  "main": "dist/index.cjs",
  "module": "./dist/index.mjs",
  "exports": {
    "require": "./dist/index.cs",
    "import": "./dist/index.mjs"
  },
  "typings": "dist/index.d.ts",
  "sideEffects": false,
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  },
  "scripts": {
    "clean": "rimraf dist",
    "check": "tsc --noEmit",
    "build": "rollup -c",
    "lint": "eslint --ext ts .",
    "format": "prettier --write .",
    "test": "uvu -r ts-node/register test",
    "coverage": "c8 --include=src --exclude=src/index.ts npm test",
    "report": "c8 report --reporter=text-lcov > coverage/lcov.info",
    "prepublishOnly": "run-s clean lint check test build",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "20.4.5",
    "@typescript-eslint/eslint-plugin": "6.2.0",
    "@typescript-eslint/parser": "6.7.3",
    "c8": "8.0.1",
    "esbuild": "0.18.17",
    "eslint": "8.46.0",
    "eslint-config-prettier": "8.9.0",
    "eslint-plugin-unicorn": "48.0.1",
    "husky": "8.0.3",
    "lint-staged": "13.2.3",
    "npm-run-all": "4.1.5",
    "prettier": "3.0.0",
    "rimraf": "5.0.1",
    "rollup": "3.27.0",
    "rollup-plugin-dts": "5.3.0",
    "rollup-plugin-esbuild": "5.0.0",
    "rollup-plugin-filesize": "10.0.0",
    "ts-node": "10.9.1",
    "tslib": "^2.6.1",
    "typescript": "5.1.6",
    "uvu": "0.5.6"
  },
  "repository": "github:smonn/validator-fns",
  "homepage": "https://validator-fns.smonn.se/",
  "runkitExampleFilename": "runkit.js",
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  }
}
