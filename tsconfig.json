{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/**/*.test.ts"],
  "compilerOptions": {
    "lib": [
      "DOM",
      "ES2019",
      "ES2020.Promise",
      "ES2020.BigInt",
      "ES2020.String"
    ],
    "module": "ESNext",
    "target": "ES2019",
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "sourceMap": true
  }
}
