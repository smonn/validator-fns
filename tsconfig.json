{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "newLine": "lf",
    "noEmitOnError": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": false,
    "pretty": true,
    "resolveJsonModule": false,
    "stripInternal": true,
    "useDefineForClassFields": false,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "lib": [
      "DOM",
      "ES2021",
      "ES2021.Intl",
      "ES2021.Promise",
      "ES2021.String",
      "ES2021.WeakRef"
    ],
    "module": "Node16",
    "moduleResolution": "Node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2019"
  },
  "include": ["src", "test"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
