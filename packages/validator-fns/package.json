{
  "name": "validator-fns",
  "description": "Tiny validation utility",
  "version": "3.0.0-alpha.0",
  "type": "module",
  "license": "MIT",
  "repository": "github:smonn/validator-fns",
  "homepage": "https://validator-fns.smonn.se/",
  "sideEffects": false,
  "author": {
    "name": "Simon Ingeson",
    "url": "https://smonn.se"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "exports": {
    "types": "./dist/index.d.ts",
    "import": "./dist/index.js",
    "require": "./dist/index.cjs"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.{ts,js,css,md}": "prettier --write"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  },
  "scripts": {
    "build": "tsup",
    "lint": "eslint .",
    "format": "prettier --write .",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "prepublishOnly": "run-s lint test build",
    "prepare": "husky"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.4",
    "@tsconfig/recommended": "^1.0.6",
    "@tsconfig/strictest": "^2.0.5",
    "@types/node": "^20.12.12",
    "@vitest/coverage-v8": "^1.6.0",
    "eslint": "^9.2.0",
    "husky": "^9.0.11",
    "prettier": "^3.2.5",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "keywords": [
    "async",
    "browser",
    "browsers",
    "function",
    "functional",
    "functions",
    "isomorphic",
    "node",
    "promise",
    "ssr",
    "typescript",
    "universal",
    "validate",
    "validation",
    "validator"
  ]
}
