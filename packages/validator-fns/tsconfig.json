{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": [
    "@tsconfig/recommended/tsconfig",
    "@tsconfig/node20/tsconfig",
    "@tsconfig/strictest/tsconfig"
  ],
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "verbatimModuleSyntax": true
  },
  "include": [
    "src/**/*"
  ]
}